extend ../layout

block content
    div(class="d-flex flex-row content mx-auto")
        div(class="profile-container")
            include ../include/profile.pug
        div(class="flex-fill")
            form(class="card" method="post" action= tweet._id ? "/tweet/update/" + tweet._id : "/tweet")
                div(class="card-header") Ecrire un tweet
                div(class="card-body")
                    div(class="form-group")
                        textarea(class="form-control" name="content" placeholder="What is happening")= tweet.content
                    if errors
                        ul(class="my-2")
                            each error in errors
                                li(class="text-danger")= error
                    div(class="w-100")
                        input(type="submit" value="Send" class="btn btn-primary ml-auto d-block")